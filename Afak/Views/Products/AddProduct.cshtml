
@model Afak.ViewModels.ProductCreateVM
@using Afak.Models

@{
    ViewData["Title"] = "AddProduct";
}

<h2>AddProduct</h2>

<p>Keep Adding When you finish go to home to see them</p>





<hr />

<div class="row">

    <div class="col-md-4">

        <form enctype="multipart/form-data" asp-controller="products" asp-action="AddProduct">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="Name" class="control-label"></label>

                <input asp-for="Name" class="form-control" />

                <span asp-validation-for="Name" class="text-danger"></span>

            </div>



            <div class="form-group">

                <label asp-for="Price" class="control-label"></label>

                <input asp-for="Price" class="form-control" />

                <span asp-validation-for="Price" class="text-danger"></span>

            </div>


            <div class="form-group">

                <label asp-for="Desc" class="control-label"></label>

                <input asp-for="Desc" class="form-control" />

                <span asp-validation-for="Desc" class="text-danger"></span>

            </div>



            <div class="form-group">

                <label asp-for="Category" class="control-label"></label>

                <select asp-for="Category" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<Category>()">

                    <option value=""> Please Sellect Category </option>

                </select>

                <span asp-validation-for="Category" class="text-danger"></span>

            </div>





            <div class="form-group row">
                <label asp-for="photoOne" class="control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">

                        <input asp-for="photoOne" class="form-control custom-file-input" />

                        <label class="custom-file-label">Choose File...</label>
                    </div>
                    <span asp-validation-for="photoOne" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">

                <label asp-for="photoTwo" class="control-label"></label>

                <div class="col-sm-10">

                    <div class="custom-file">

                        <input asp-for="photoTwo" class="form-control custom-file-input" />

                        <label class="custom-file-label">Choose File...</label>

                    </div>

                    <span asp-validation-for="photoTwo" class="text-danger"></span>

                </div>

            </div>

            <div class="form-group row">

                <label asp-for="photoThree" class="control-label"></label>

                <div class="col-sm-10">

                    <div class="custom-file">

                        <input asp-for="photoThree" class="form-control custom-file-input" />

                        <label class="custom-file-label">Choose File...</label>

                    </div>

                    <span asp-validation-for="photoThree" class="text-danger"></span>

                </div>

            </div>

            <div class="form-group row">

                <label asp-for="photoFour" class="control-label"></label>

                <div class="col-sm-10">

                    <div class="custom-file">

                        <input asp-for="photoFour" class="form-control custom-file-input" />

                        <label class="custom-file-label">Choose File...</label>

                    </div>

                    <span asp-validation-for="photoFour" class="text-danger"></span>

                </div>

            </div>

            <div class="form-group row">

                <label asp-for="photoFive" class="control-label"></label>

                <div class="col-sm-10">

                    <div class="custom-file">

                        <input asp-for="photoFive" class="form-control custom-file-input" />

                        <label class="custom-file-label">Choose File...</label>

                    </div>

                    <span asp-validation-for="photoFive" class="text-danger"></span>

                </div>

            </div>



            <div class="form-group">

                <input type="submit" value="Add" class="btn btn-primary" />

            </div>

        </form>

    </div>

</div>



<div>

    <a asp-controller="home" asp-action="Index">Back to List</a>

</div>



@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

