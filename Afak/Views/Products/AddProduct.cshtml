
@model Afak.ViewModels.ProductCreateVM
@using Afak.Models

@{
    ViewData["Title"] = "AddProduct";
}

<h2 style="padding-top:150px !important">AddProduct</h2>

<p>Keep Adding When you finish go to home to see them</p>





<hr />
<div class="container">
    <div class="row">

        <div class="col-md-4">

            <form enctype="multipart/form-data" asp-controller="products" asp-action="AddProduct">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group">

                        <label asp-for="Name" class="control-label"></label>

                        <input asp-for="Name" class="form-control" />

                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>



                    <div class="form-group">

                        <label asp-for="Price" class="control-label"></label>

                        <input asp-for="Price" class="form-control" />

                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>


                    <div class="form-group">

                        <label asp-for="Desc" class="control-label"></label>

                        <input asp-for="Desc" class="form-control" />

                        <span asp-validation-for="Desc" class="text-danger"></span>

                    </div>

                </div>



                <div class="form-group dropdown">

                    <label asp-for="Category" class="control-label"></label>

                    <select asp-for="Category" class="custom-select custom-select-sm" asp-items="Html.GetEnumSelectList<Category>()">

                        <option value=""> Please Sellect Category </option>

                    </select>

                    <span asp-validation-for="Category" class="text-danger"></span>

                </div>



                <div class="row">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="photoOne" type="file" class="form-control-file" id="exampleFormControlFile1">
                            </div>
                            <span asp-validation-for="photoOne" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="photoTwo" type="file" class="form-control-file" id="exampleFormControlFile1" />
                            </div>
                            <span asp-validation-for="photoTwo" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-sm-10">

                            <div class="custom-file">

                                <input asp-for="photoThree" type="file" class="form-control-file" id="exampleFormControlFile1" />
                            </div>

                            <span asp-validation-for="photoThree" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="form-group row">


                        <div class="col-sm-10">

                            <div class="custom-file">

                                <input asp-for="photoFour" type="file" class="form-control-file" id="exampleFormControlFile1" />


                            </div>

                            <span asp-validation-for="photoFour" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="form-group row">


                        <div class="col-sm-10">

                            <div class="custom-file">

                                <input asp-for="photoFive" type="file" class="form-control-file" id="exampleFormControlFile1" />


                            </div>

                            <span asp-validation-for="photoFive" class="text-danger"></span>

                        </div>

                    </div>
                </div>





                <div class="form-group">

                    <input type="submit" value="Add" class="btn btn-primary" />

                </div>

            </form>

        </div>

    </div>
</div>





<div>

    <a href='javascript:history.go(-1)'>Back to List</a>

</div>



@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

