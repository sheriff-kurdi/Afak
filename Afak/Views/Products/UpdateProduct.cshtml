@model Afak.ViewModels.ProductCreateVM

@{
    ViewData["Title"] = "UpdateProduct";
}

<h2>UpdateProduct</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="UpdateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @if (Model.Category != Category.Unit && Model.Category != Category.AirCompressor)
            {
                <div class="form-group">
                    <label asp-for="photoOne" class="control-label"></label>
                    <input type="file" asp-for="photoOne" class="form-control" />
                    <span asp-validation-for="photoOne" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="photoTwo" class="control-label"></label>
                    <input type="file" asp-for="photoTwo" class="form-control" />
                    <span asp-validation-for="photoTwo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="photoThree" class="control-label"></label>
                    <input type="file" asp-for="photoThree" class="form-control" />
                    <span asp-validation-for="photoThree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="photoFour" class="control-label"></label>
                    <input type="file" asp-for="photoFour" class="form-control" />
                    <span asp-validation-for="photoFour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="photoFive" class="control-label"></label>
                    <input type="file" asp-for="photoFive" class="form-control" />
                    <span asp-validation-for="photoFive" class="text-danger"></span>
                </div>
            }

            @if (Model.Category == Category.AirCompressor)
            {


                <div class="form-group row">
                    <label asp-for="photoOne" class="control-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">

                            <input asp-for="photoOne" class="form-control custom-file-input" />

                            <label class="custom-file-label">Choose File...</label>
                        </div>
                        <span asp-validation-for="photoOne" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="photoTwo" class="control-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">

                            <input type="file" asp-for="photoTwo" class="form-control custom-file-input" />

                            <label class="custom-file-label">Choose File...</label>
                        </div>
                        <span asp-validation-for="photoTwo" class="text-danger"></span>
                    </div>
                </div>
            }

            @if (Model.Category == Category.Unit)
            {
                <div class="form-group row">
                    <label asp-for="photoOne" class="control-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">

                            <input  asp-for="photoOne" class="form-control custom-file-input" />

                            <label class="custom-file-label">Choose File...</label>
                        </div>
                        <span asp-validation-for="photoOne" class="text-danger"></span>
                    </div>
                </div>
            }


            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()">
                    <option value=""> Please Sellect Category </option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

