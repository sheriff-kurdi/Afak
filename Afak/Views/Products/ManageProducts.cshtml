@model IEnumerable<Afak.Models.Product>

@{
    ViewData["Title"] = "ManageProducts";
}

<h2>ManageProducts</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>




<div class="container" style="padding-top:20px !important">


    <div class="row" style="padding-top:20px">

        @foreach (Product item in Model)
        {
            var photoPath = "~/Uploads/" + (item.ImageOne) ?? "niimage.jpg";

            <div class="col-md-3 col-sm-4 product-col " style="border:inherit">
                <div>
                    <h4>@item.Category</h4>
                </div>
                <div class="imgHover">
                    <img style=" height:300px;" src="@photoPath" alt="IMG-PRODUCT" asp-append-version="true">
                </div>
                <div class="product-name">
                    <div class="pull-left">
                        <p style="display:inline-block"> @Html.DisplayFor(modelItem => item.Name)</p>
                    </div>
                    <div class="pull-right">
                        <strong><span class="productSalePrice">$ @Html.DisplayFor(modelItem => item.Price)</span></strong>
                    </div>
                </div>


                <div class="clearfix">

                </div>

                <a asp-action="Details" asp-controller="ProductsCatalog" asp-route-id="@item.Id" class="button"><span>Details</span></a>

            </div>



        }
    </div>

</div>
